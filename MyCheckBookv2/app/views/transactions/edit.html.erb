<h2>Editing transaction</h2>

<%= form_for([@user, @transaction]) do |f| %>

  <div class="field">
    <%= f.label :transaction_date %><br />
    <%= f.date_select :transaction_date %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 3, :columns => 50 %>
  </div>
  
  <div class="action">
    <%= f.submit 'Update Transaction' %>
  </div>

<% end %>


<%= link_to 'Back', user_path(@user) %>
